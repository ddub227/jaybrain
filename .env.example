# JayBrain environment variables
# Copy this file to .env and fill in your values.

# --- Google Docs / Sheets ---
GDOC_SHARE_EMAIL=your-email@gmail.com
GDOC_FOLDER_ID=your-google-drive-folder-id
HOMELAB_TOOLS_SHEET_ID=your-homelab-tools-sheet-id
SHEETS_INDEX_ID=your-sheets-index-id
GOOGLE_APPLICATION_CREDENTIALS=~/.config/gcloud/jaybrain-service-account.json

# --- Daily Briefing ---
RECIPIENT_EMAIL=your-email@gmail.com
NETWORKING_SPREADSHEET_ID=your-networking-sheet-id

# --- Job Search ---
JOB_SHEET_SPREADSHEET_ID=your-job-sheet-id

# --- Telegram (GramCracker bot) ---
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_AUTHORIZED_USER=your-telegram-user-id
ANTHROPIC_API_KEY=your-anthropic-api-key
GRAMCRACKER_CLAUDE_MODEL=claude-sonnet-4-20250514

# --- News ---
NEWSAPI_KEY=your-newsapi-key

# --- Homelab ---
HOMELAB_JOURNAL_FILENAME=Learn Out Loud Lab_{date}.md
